

<section class="dark">
    <div class="container">
        <div class="row">
            <div class="col-sm-5 col-md-6 col-12 pb-4">
                <h1>Comments</h1>
                <div class="comment mt-4 text-justify float-left"> <img src="https://i.imgur.com/yTFUilP.jpg" alt="" class="rounded-circle" width="40" height="40">
                    <h4><%= comment.commenter %></h4> <span>- <%= comment.created_at %></span> <br>
                    <p><%= comment.body %></p>
                    <p class="tag__item"><i class="fas fa-trash"></i><%= link_to "Destroy",  [comment.article, comment],
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
                    <p>
                </div>
            </div>
        </div>
    </div>
</section>
