<section class="dark">
<div class="container ">
 <h1>Add Comment</h1>
<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="form-group">
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter,class: "form-control form-control-lg" ,placeholder: "Commenter Name"  %>
  </div>

  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "form-control",rows: "5", placeholder: "Enter Comment..." %>
  </div>

  <hr/>
  <div>
    <%= form.submit  class: 'btn btn-primary' %>
  </div>
<% end %>
</div>
</section>


